<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="19dp">


        <!--    this linear layout contains all the the bubble buttons-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the pressure points"
                android:textAlignment="center" />

            <!--    this linear layout has bubbles 1 6 10-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bubble_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"
                    android:text="1"
                    android:textSize="40sp" />


                <Button
                    android:id="@+id/bubble_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7px"
                    android:layout_marginVertical="20px"
                    android:background="@drawable/roundedbutton"
                    android:text="6"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/bubble_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"
                    android:text="10"
                    android:textSize="40sp" />

            </LinearLayout>

            <!--    this has bubbles 2 7 11-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bubble_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"

                    android:text="2"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/bubble_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7px"
                    android:layout_marginVertical="15px"
                    android:background="@drawable/roundedbutton"
                    android:text="7"
                    android:textSize="40sp" />


                <Button
                    android:id="@+id/bubble_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"

                    android:text="11"
                    android:textSize="40sp" />

            </LinearLayout>


            <!--    this has bubbles 3 8 12-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bubble_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"

                    android:text="3"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/bubble_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7px"
                    android:layout_marginVertical="15px"
                    android:background="@drawable/roundedbutton"

                    android:text="8"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/bubble_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"
                    android:text="12"
                    android:textSize="40sp" />
            </LinearLayout>


            <!--    this has bubbles 4 9 13-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bubble_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"

                    android:text="4"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/bubble_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7px"
                    android:layout_marginVertical="20px"
                    android:background="@drawable/roundedbutton"

                    android:text="9"
                    android:textSize="40sp" />


                <Button
                    android:id="@+id/bubble_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"
                    android:text="13"

                    android:textSize="35sp" />
            </LinearLayout>


            <!--    this has bubbles 5 14-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110px"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bubble_5"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"

                    android:text="5"
                    android:textSize="25sp" />


                <Button
                    android:id="@+id/bubble_14"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7px"
                    android:background="@drawable/roundedbutton"

                    android:text="14"
                    android:textSize="25sp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="200px"
            android:orientation="vertical">

            <!--        list of paces-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select pace"
                    android:textAlignment="center" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <RadioButton
                        android:layout_width="120pt"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="16pt"
                        android:paddingTop="3pt"
                        android:paddingRight="16pt"
                        android:paddingBottom="3pt"
                        android:text="Calm"
                        android:textColor="@color/radio_flat_text_selector" />

                    <RadioButton
                        android:layout_width="120pt"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="16pt"
                        android:paddingTop="3pt"
                        android:paddingRight="16pt"
                        android:paddingBottom="3pt"
                        android:text="Medium"
                        android:textColor="@color/radio_flat_text_selector" />

                    <RadioButton
                        android:layout_width="120pt"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="16pt"
                        android:paddingTop="3pt"
                        android:paddingRight="16pt"
                        android:paddingBottom="3pt"
                        android:text="Intensive"
                        android:textColor="@color/radio_flat_text_selector" />


                </RadioGroup>
            </LinearLayout>

            <!--        timing-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:orientation="vertical">

                <!--        list of times-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select time"
                    android:textAlignment="center" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:layout_width="120pt"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="16pt"
                        android:paddingTop="3pt"
                        android:paddingRight="16pt"
                        android:paddingBottom="3pt"
                        android:text="2 Minutes"
                        android:textColor="@color/radio_flat_text_selector" />

                    <RadioButton
                        android:layout_width="120pt"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="16pt"
                        android:paddingTop="3pt"
                        android:paddingRight="16pt"
                        android:paddingBottom="3pt"
                        android:text="5 Minutes"
                        android:textColor="@color/radio_flat_text_selector" />

                    <RadioButton
                        android:layout_width="120pt"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="16pt"
                        android:paddingTop="3pt"
                        android:paddingRight="16pt"
                        android:paddingBottom="3pt"
                        android:text="10 Minutes"
                        android:textColor="@color/radio_flat_text_selector" />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_second"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:adjustViewBounds="true"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/rsz_car_seat"
            android:scaleType="fitXY"
            android:text="@string/save"
            android:textSize="18sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>